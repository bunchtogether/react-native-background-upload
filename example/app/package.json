{
  "name": "Boilerplate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "start:clean": "rm -rf ~/.rncache; watchman watch-del-all && rm -rf $TMPDIR/react-* && rm -rf node_modules/ && yarn cache clean && yarn install && react-native start --reset-cache",
    "clean-packager-cache": "./node_modules/react-native/packager/packager.sh start --resetCache",
    "ios-open": "open ios/*.xcodeproj",
    "ios": "node node_modules/react-native/local-cli/cli.js run-ios",
    "android": "node node_modules/react-native/local-cli/cli.js run-android",
    "link": "node node_modules/react-native/local-cli/cli.js link",
    "lint": "yarn run lint:js && yarn run lint:flow",
    "lint:eslint": "eslint --fix",
    "lint:js": "yarn run lint:eslint ./app",
    "lint:flow": "flow --show-all-errors ./app",
    "pretest": "npm run test:clean && npm run lint",
    "test:clean": "rimraf ./coverage",
    "test": "cross-env NODE_ENV=test jest --runInBand app/containers app/components",
    "generate": "plop --plopfile internals/generators/index.js",
    "remotedev": "remotedev-debugger --injectserver",
    "flow-typed": "flow-typed install --overwrite",
    "postinstall": "yarn run link && yarn run remotedev && rndebugger-open",
    "update-submodules": "git submodule foreach git pull origin $(git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \\(.*\\)/\\1/')"
  },
  "jest": {
    "setupFiles": [
      "./test/setup.js"
    ],
    "preset": "react-native",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "app/containers/**/*.js",
      "app/components/**/*.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-navigation)"
    ]
  },
  "remotedev": {
    "hostname": "localhost",
    "port": 5678
  },
  "dependencies": {
    "babel-plugin-transform-runtime": "^6.23.0",
    "fbjs": "0.8.16",
    "immutable": "^3.8.2",
    "lodash": "^4.17.4",
    "react": "~16.0.0",
    "react-native": "0.49.5",
    "react-native-background-upload": "file:../../",
    "react-native-orientation": "^3.1.3",
    "react-native-vector-icons": "^4.4.2",
    "react-navigation": "^1.0.0-beta.16",
    "react-redux": "5.0.6",
    "redux": "3.7.2",
    "redux-immutable": "4.0.0",
    "redux-saga": "^0.16.0",
    "reselect": "3.0.1",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-exclude-ignore": "^1.0.0",
    "babel-loader": "7.1.2",
    "babel-plugin-istanbul": "4.1.5",
    "babel-plugin-module-alias": "^1.6.0",
    "babel-preset-react-native": "^4.0.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "cross-env": "^5.1.1",
    "empty": "^0.10.1",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.3",
    "eslint": "^4.10.0",
    "eslint-config-bunchtogether": "^1.1.2",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-flowtype-errors": "^3.3.5",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-redux-saga": "^0.6.0",
    "expect": "^21.2.1",
    "flow-bin": "0.53.0",
    "flow-typed": "^2.2.3",
    "immutable-devtools": "0.0.7",
    "jest": "^21.2.1",
    "mocha": "4.0.1",
    "node-fetch": "^1.7.3",
    "plop": "^1.9.0",
    "proxyquire": "^1.8.0",
    "react-dom": "^16.0.0",
    "react-native-debugger-open": "^0.3.15",
    "redux-saga-tester": "^1.0.373",
    "remote-redux-devtools": "^0.5.12",
    "remote-redux-devtools-on-debugger": "^0.8.3"
  }
}
